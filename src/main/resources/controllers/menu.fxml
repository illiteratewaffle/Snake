<AnchorPane maxHeight="600.0" maxWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MenuController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../menu_background.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../menu_background.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" layoutY="299.0" prefHeight="300.0" prefWidth="800.0">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#play" text="Play Snake" textFill="#1dc338">
               <font>
                  <Font name="Calibri Bold" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="topScoreDisplay" text="TOP SCORE: 1" textFill="#ff9000">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin>
               <font>
                  <Font name="Calibri Bold" size="24.0" />
